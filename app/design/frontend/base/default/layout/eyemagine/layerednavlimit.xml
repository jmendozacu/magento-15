<layout version="0.1.0">
    <catalog_category_view>
        <reference name="head">
            <action method="addCss" ifconfig="catalog/layered_navigation/limit">
                <stylesheet>eyemagine/layerednavlimit/css/layerednavlimit.css</stylesheet>
            </action>
            <action method="addItem" ifconfig="catalog/layered_navigation/limit">
                <type>skin_js</type>
                <stylesheet>eyemagine/layerednavlimit/js/layerednavlimit.js</stylesheet>
            </action>
        </reference>
    </catalog_category_view>
</layout>